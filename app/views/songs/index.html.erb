<% @songs.each do |song| %>
<div class="card" style="width: 18rem;">
  <img src="<%= song.thumbnail %>" class="card-img-top" alt>
  <div class="card-body">
    <h5 class="card-title"><%= song.link %></h5>
    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
    <% if song.user == current_user %>
            <%= link_to 'Edit', edit_song_path(song), class: 'btn btn-secondary' %>
            <%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    <% end %>
  </div>
</div>
<% end %>
